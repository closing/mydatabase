<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <context-param>
    <param-name>emailofwebmaster</param-name>
    <param-value>webmaster@htomail.com</param-value>
  </context-param>
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>mypack.DispatcherServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>info</servlet-name>
    <servlet-class>mypack.RequestInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>mypack.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>font</servlet-name>
    <servlet-class>mypack.FontServlet</servlet-class>
    <init-param>
      <param-name>color</param-name>
      <param-value>blue</param-value>
    </init-param>
    <init-param>
      <param-name>size</param-name>
      <param-value>15</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>contexttester</servlet-name>
    <servlet-class>mypack.ContextTesterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>life</servlet-name>
    <servlet-class>mypack.LifeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>counter</servlet-name>
    <servlet-class>mypack.CounterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>clear</servlet-name>
    <servlet-class>mypack.CounterClearServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>exceptiontester</servlet-name>
    <servlet-class>mypack.ExceptionTesterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/dispatcher</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>info</servlet-name>
    <url-pattern>/info</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>contexttester</servlet-name>
    <url-pattern>/contexttester</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>font</servlet-name>
    <url-pattern>/font</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>life</servlet-name>
    <url-pattern>/life</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>counter</servlet-name>
    <url-pattern>/counter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>clear</servlet-name>
    <url-pattern>/clear</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>exceptiontester</servlet-name>
    <url-pattern>/exceptiontester</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.htm</welcome-file>
  </welcome-file-list>
  <listener>
	  <listener-class>mypack.MyServletContextListener</listener-class>
  </listener>
</web-app> 
